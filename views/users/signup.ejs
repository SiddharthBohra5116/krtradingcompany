<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-6 offset-2">
    <h1>SignUp on Wanderlust</h1>
    <form action="/signup" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
              name="username"
              id="username"
              type="text"
              class="form-control"
              required  
            />
            <div class="valid-feedback">Looks good!</div>  <!--this is for showing the me=sg for validation also a bootstrap thing-->
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              name="email"
              id="email"
              type="text"
              class="form-control"
              required  
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              name="password"
              id="password"
              type="password"
              class="form-control"
              required  
            />
          </div>
          <button class="btn btn-success">SignUp</button>
    </form>
  </div>
</div>
