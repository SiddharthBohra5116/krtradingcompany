<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit Your Product</h3>
    <form
      action="/products/<%= product._id %>?_method=PUT"
      method="POST"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input
          type="text"
          value="<%= product.name%>"
          name="product[name]"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          type="text"
          name="product[description]"
          class="form-control"
          required
        >
<%= product.name%></textarea
        >
        <div class="invalid-feedback">Please enter a short description</div>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input
          value="<%= product.price%>"
          name="product[price]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Price should be valid</div>
      </div>

      <div class="mb-3">
        Orignal Listing Image <br>
        <img src="<%= orignalImageUrl %>">
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input
         name="product[image]"
          type="file"
          class="form-control"
        />
      </div>

      <button class="btn btn-dark add-btn mt-3">Edit</button>
    </form>
  </div>
</div>
