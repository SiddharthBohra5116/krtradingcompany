<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-3">
      <h3><%= product.name %></h3>
    </div>
    <div class="card col-6 offset-3 show-card">
      <img
        src="<%= product.image.url %>"
        class="card-img-top show-img"
        alt="product_image"
      />
      <div class="card-body">
        <p class="card-text"><%= product.description %></p>
        <p class="card-text">
          &#8377; <%= product.price.toLocaleString("en-IN") %>
        </p>
        <!-- &#8377; this for the symbol of the ruppy and .toLocaleString("en-IN") it is fo the commans in string according to the indian convection -->

      </div>
    </div>
      
    <br />
    <% if ( currUser && currUser._id.equals(process.env.OWNER_ID) ) { %>
    <div class="btns">
        <a
          href="/products/<%= product._id %>/edit"
          class="btn bg-success row-1 col-1 offset-3 edit-btn mt-2"
          >Edit</a
        >
    
        <form action="/products/<%= product._id  %>?_method=DELETE" method="POST">
          <button class="btn btn-dark offset-5 mt-2">DELETE</button>
        </form>
      </div>
      <% } %>